doctype html
html
  head
    title Tweetalyze
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300|Roboto+Slab:100')

  //- Initialize Angular app
  body(ng-app="tweetalyze")
    block content
    ui-view

    //- Backup CDNS
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.6.1/angular.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://code.highcharts.com/highcharts.js')
    script(src="https://code.highcharts.com/modules/exporting.js")
    script(src='/highcharts-ng/dist/highcharts-ng.js')

    //- Requiring component files
    script(src='/javascripts/client.js')
    script(src='/javascripts/components/search/search.component.js')
    script(src='/javascripts/components/stream/stream.component.js')
    script(src='/javascripts/components/twitter.service.js')
